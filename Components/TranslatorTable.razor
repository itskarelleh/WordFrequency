@using WordFrequency.Models;
@using WordFrequency.Components;

<div>
    <h3 class="text-center text-2xl font-mono text-white">Results</h3>
    <table class="table-fixed w-1/2 m-auto bg-zinc-100 drop-shadow-lg p-5">
        <thead>
            <tr>
                <th>word</th>
                <th>frequency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var word in words)
            {
                <tr>
                    <td class="indent-3">@word.Value</td>
                    <td class="text-center">@word.Frequency</td>
                </tr>
            }
        </tbody>
    </table>
    <p class="font-bold text-white text-center mt-3">Number of Words: @totalWords</p>
    <p class="font-bold text-white text-center mt-3">Total Count: @totalCount</p>
</div>

@code {

    [Parameter]
    public String textInput { get; set; }

    List<Word> words = new List<Word>();
    int totalWords;
    int totalCount;

    public int getTotalCount()
    {

        for (int i = 0; i <= words.Count; i++)
        {
            int curr = words[i].Frequency;

            totalCount += curr;

        }

        return totalCount;

    }
    public int getTotalWords() => totalWords = words.Count;

